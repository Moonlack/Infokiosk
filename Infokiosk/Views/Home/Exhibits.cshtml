@model List<Infokiosk.Models.Exhibit>
<div class="row">
    <div class="col-sm-3">
        <div class="thumbnail item-card">
            <a href="/Home/Medals">
                <img src="~/Content/Media/1.jpg" alt="...">
                <div class="caption">

                    <h3 class="text-center">Медали Олимпийских игр</h3>

                </div>
            </a>
        </div>

    </div>
    @foreach (var exh in Model)
    {
        <div class="col-sm-3">
            <div class="thumbnail item-card">
                <a href="/Home/ExhibitDescription/@exh.Id">
                    <img src="~/Content/Media/1.jpg" alt="...">
                    <div class="caption">

                        <h3 class="text-center">@exh.Name</h3>

                    </div>
                </a>
            </div>

        </div>
    }
</div>

<script type="text/javascript" src="~/Scripts/CardScript.js"></script>
