@model IEnumerable<Infokiosk.Models.Exhibit>
@{ string path = "";}

<div class="row">
    <div class="col-sm-3 ">
        <div class="thumbnail item-card" style="height:480px">
            <a href="/Home/Medals">
                <img src="~/Content/Media/Exhibits/medals.jpg" alt="...">
                <div class="caption">

                    <h3 class="text-center">Медали Олимпийских игр</h3>

                </div>
            </a>
        </div>
    </div>
    @foreach (var exh in Model)
    {
        <div class="col-sm-3">
            <div class="thumbnail item-card"  style="height:480px">
                    @try { path = exh.Images[0].Filename; }
                catch (Exception) { path = @"/Content/Media/1.jpg"; }
                    <a href="/Home/ExhibitDescription/@exh.ExhibitId">
                        <img src="@path" alt="...">
                        <div class="caption">

                            <h3 class="text-center">@exh.Name</h3>

                        </div>
                    </a>
            </div>
        </div>
    }
</div>

@*<script type="text/javascript" src="~/Scripts/CardScript.js"></script>*@
