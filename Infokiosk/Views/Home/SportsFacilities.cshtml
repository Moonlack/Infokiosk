@*@model Infokiosk.Models.SportsFacilitiesViewModel*@
@model List<Infokiosk.Models.SportsFacilityCategory>
@{
    ViewBag.Title = "SportsFacilities";
}


<div class="row">
    @for (int j = 0; j < Model.Count; j++)
    {
        <div class="col-sm-6">
            <div class="item-card">
                <h2 class="text-center">@Model[j].Name</h2>
                <div id="carousel-example-generic-@j" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        @{
                            for (int i = 1; i < Model[j].SportsFacilities.Count; i++)
                            {
                                <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                            }
                        }
                    </ol>

                    <!-- Wrapper for slides -->
                    @try
                    {
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <a href="/Home/SportsFacilityDescription/@Model[j].SportsFacilities[0].Id"><img src="@Model[j].SportsFacilities[0].Images.First()" class="center-block"></a>
                                <div class="carousel-caption">
                                    <h3>@Model[j].SportsFacilities[0].Name</h3>
                                </div>
                            </div>
                            @for (int i = 1; i < Model[j].SportsFacilities.Count(); i++)
                            {
                                <div class="item">
                                    <a href="/Home/SportsFacilityDescription/@Model[j].SportsFacilities[i].Id"><img src="@Model[j].SportsFacilities[i].Images.First()" class="center-block"/></a>
                                    <div class="carousel-caption">
                                        <h3>@Model[j].SportsFacilities[i].Name</h3>
                                        </div>
                                </div>
                            }

                        </div>
                    }
                    catch (Exception e)
                    {
                    }


                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic-@j" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic-@j" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
                                }
</div>


<script type="text/javascript" src="~/Scripts/CardScript.js"></script>