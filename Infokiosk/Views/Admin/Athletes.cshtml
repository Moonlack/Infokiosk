@model List<Infokiosk.Models.Athlete>
@{
    ViewBag.Title = "Athletes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Спортсмены</h1>

<div class="col-sm-6">
    <h2>Добавление спортсмена</h2>
    <form method="post" class="form-horizontal" role="form" action="/Admin/AddAthlete" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">ФИО:</label>
            <input type="text" name="Initials" class="form-control" />
        </div>
        <div class="form-group">
            <label for="description" class="col-xs-4 control-label">Файл с описанием:</label>
            <input type="file" name="description" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-success" value="Добавить" />
            </div>
        </div>
    </form>
</div>

<div class="col-md-6">
    <h2>Форма изменения спортсмена</h2>
    <form method="post" class="form-horizontal" role="form" action="/Admin/ChangeAthlete" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Спортсмен:</label>
            <select class="selectpicker form-control" name="Id">
                @foreach (var m in Model)
                {
                    <option value="@m.Id">@m.Initials</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">ФИО:</label>
            <input type="text" name="initials" class="form-control" />
        </div>
        <div class="form-group">
            <label for="description" class="col-xs-4 control-label">Файл с описанием:</label>
            <input type="file" class="form-control" name="description" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
    </form>
</div>

<div class="col-sm-6">
    <h2>Удаление спортсмена</h2>
    <form method="get" class="form-horizontal" role="form" action="/Admin/DeleteAthlete">
        <div class="form-group">
            <label class="col-xs-4 control-label">Спортсмен:</label>
            <select class="selectpicker form-control" name="id">
                <option value="">Выберите спортсмена</option>
                @foreach (var x in @Model)
            {
                    <option value="@x.Id">@x.Initials</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-danger" value="Удалить" />
            </div>
        </div>
    </form>
</div>

<div class="col-sm-6">
    <h2>Загрузка изображений</h2>
    <form class="form-horizontal" action="/Admin/UploadImagesAthlete" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Спортсмен:</label>
            <select class="selectpicker form-control" name="Id">
                @foreach (var m in Model)
                {
                    <option value="@m.Id">@m.Initials</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="uploads" class="col-xs-4 control-label">Файлы:</label>
            <input type="file" class="form-control" name="uploads" multiple />
        </div>
        <div class="col-md-offset-3 col-md-10">
            <button id="submit-all" class="btn btn-success">Добавить изображения</button>
        </div>
    </form>
</div>
