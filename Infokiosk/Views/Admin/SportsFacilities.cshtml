@model Infokiosk.Models.AdminSportsFacilitiesViewModel
@{
    ViewBag.Title = "SportsFacilities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Спортивные объекты</h1>

<div class="row">
<div class="col-sm-6">
    <h2>Добавление спортивного объекта</h2>
    <form method="post" class="form-horizontal" role="form" action="/SportsFacilities/AddSportsFacility">
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">Название:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Name" value="@Model.SportsFacility.Name" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Категория:</label>
            <div class="col-xs-8">
                <select class="selectpicker form-control" name="Id">
                    @foreach (var m in Model.Categories)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-xs-4 control-label">Описание:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Description" value="@Model.SportsFacility.Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-success" value="Добавить" />
            </div>
        </div>
    </form>
</div>

<div class="col-md-6">
    <h2>Форма изменения спортивного объекта</h2>

    <form method="post" class="form-horizontal" role="form" action="/Admin/ChangeSportsFacility">
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Спортивный объект:</label>
            <div class="col-xs-7">
                <select class="selectpicker form-control" name="Id">
                    <option>Выберите спортивный объект</option>
                    @foreach (var m in Model.SportsFacilities)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">Название:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Name" value="@Model.SportsFacility.Name" class="form-control" title="asd" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Категория:</label>
            <div class="col-xs-8">
                <select class="selectpicker form-control" name="Id">
                    <option>Выберите категорию</option>
                    @foreach (var m in Model.Categories)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-xs-4 control-label">Описание:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Description" value="@Model.SportsFacility.Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Images" class="col-xs-4 control-label">Изображения:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Images" value="@Model.SportsFacility.Images" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
    </form>
</div>

<div class="col-sm-6">
    <h2>Удаление спортивного объекта</h2>
    <form method="get" class="form-horizontal" role="form" action="/Admin/DeleteSportsFacility">
        <div class="form-group">
            <label for="id" class="col-xs-4 control-label">Спортивный объект:</label>
            <select class="selectpicker form-control" name="id">
                <option value="">Выберите спортивный объект</option>
                @foreach (var x in @Model.SportsFacilities)
            {
                    <option value="@x.Id">@x.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-danger" value="Удалить" />
            </div>
        </div>
    </form>
</div>
    <div class="col-sm-6">
        <h2>Загрузка изображений</h2>
        <form action="/Admin/UploadImagesSportsFacility" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <select class="selectpicker form-control" name="id">
                    <option value="">Выберите спортивный объект</option>
                    @foreach (var x in @Model.SportsFacilities)
            {
                        <option value="@x.Id">@x.Name</option>
                    }
                </select>
            </div>
            <input type="file" name="uploads" multiple />
            <button id="submit-all">Добавить изображения</button>
        </form>
    </div>
</div>