@model Infokiosk.Models.AdminSportsFacilitiesViewModel
@{
    ViewBag.Title = "SportsFacilities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Спортивные объекты</h1>

<div class="row">
    <div class="col-sm-6">
        <h2>Добавление спортивного объекта</h2>
        <form method="post" class="form-horizontal" role="form" action="/Admin/AddSportsFacility" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name" class="col-xs-4 control-label">Название:</label>
                        <input type="text" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="category" class="col-xs-4 control-label">Категория:</label>
                    <select class="selectpicker form-control" name="category">
                        @foreach (var m in Model.Categories)
                        {
                            <option value="@m.Id">@m.Name</option>
                        }
                    </select>
                </div>
            <div class="form-group">
                <label for="description" class="col-xs-4 control-label">Файл с описанием:</label>
                        <input type="file" class="form-control" name="description" />
                    </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" class="btn btn-success" value="Добавить" />
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>Форма изменения спортивного объекта</h2>

        <form method="post" class="form-horizontal" role="form" action="/Admin/ChangeSportsFacility" enctype="multipart/form-data">
            <div class="form-group">
                <label for="id" class="col-xs-4 control-label">Спортивный объект:</label>
                    <select class="selectpicker form-control" name="id">
                        <option>Выберите спортивный объект</option>
                        @foreach (var m in Model.SportsFacilities)
                        {
                            <option value="@m.Id">@m.Name</option>
                        }
                    </select>
            </div>
            <div class="form-group">
                <label for="name" class="col-xs-4 control-label">Название:</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
            <div class="form-group">
                <label for="category" class="col-xs-4 control-label">Категория:</label>
                    <select class="selectpicker form-control" name="category">
                        @foreach (var m in Model.Categories)
                        {
                            <option value="@m.Id">@m.Name</option>
                        }
                    </select>
            </div>
            <div class="form-group">
                <label for="description" class="col-xs-4 control-label">Файл с описанием:</label>
                        <input type="file" class="form-control" name="description" />
                    </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" class="btn btn-default" value="Отправить" />
                </div>
            </div>
        </form>
    </div>

    <div class="col-sm-6">
        <h2>Удаление спортивного объекта</h2>
        <form method="get" class="form-horizontal" role="form" action="/Admin/DeleteSportsFacility">
            <div class="form-group">
                <label for="id" class="col-xs-4 control-label">Спортивный объект:</label>
                <select class="selectpicker form-control" name="id">
                    <option value="">Выберите спортивный объект</option>
                    @foreach (var x in @Model.SportsFacilities)
            {
                        <option value="@x.Id">@x.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" class="btn btn-danger" value="Удалить" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6">
        <h2>Загрузка изображений</h2>
        <form action="/Admin/UploadImagesSportsFacility" class="form-horizontal" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="id" class="col-xs-4 control-label">Спортивный объект:</label>
                <select class="selectpicker form-control" name="id">
                    <option value="">Выберите спортивный объект</option>
                    @foreach (var x in @Model.SportsFacilities)
            {
                        <option value="@x.Id">@x.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="uploads" class="col-xs-4 control-label">Файлы:</label>
                <input type="file" class="form-control" name="uploads" multiple />
            </div>
            <div class="col-md-offset-3 col-md-10">
                <button id="submit-all" class="btn btn-success">Добавить изображения</button>
            </div>
        </form>
    </div>
</div>