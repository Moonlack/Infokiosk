@model Infokiosk.Models.AdminExhibitsViewModel
@{
    ViewBag.Title = "Exhibits";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Экспонаты</h1>

<div class="col-sm-6">
    <h2>Добавление экспоната</h2>
    <form method="post" class="form-horizontal" role="form" action="/Admin/AddExhibit">
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">Название:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Name" value="@Model.Exhibit.Name" class="form-control" />
                </div>
            </div>
        </div>
        <select class="selectpicker form-control" name="Category">
            <option value="">Выбрать, если медаль Олимпийских игр</option>
                <option value="Медаль Олимпийских игр">Медаль Олимпийских игр</option>
        </select>

        <div class="form-group">
            <label for="Description" class="col-xs-4 control-label">Описание:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Description" value="@Model.Exhibit.Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Images" class="col-xs-4 control-label">Изображения:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Images" value="@Model.Exhibit.Images" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-success" value="Добавить" />
            </div>
        </div>
    </form>
</div>

<div class="col-md-6">
    <h2>Форма изменения экспоната</h2>

    <form method="post" class="form-horizontal" role="form" action="/Admin/ChangeExhibit">
        <div class="form-group">
            <label for="Id" class="col-xs-4 control-label">Экспонат:</label>
            <div class="col-xs-8">
                <select class="selectpicker form-control" name="Id">
                    @foreach (var m in Model.Exhibits)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label">Название:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Name" value="@Model.Exhibit.Name" class="form-control" title="asd" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Category" class="col-xs-4 control-label">Категория экспоната:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Category" value="@Model.Exhibit.Category" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-xs-4 control-label">Описание:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Description" value="@Model.Exhibit.Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Images" class="col-xs-4 control-label">Изображения:</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="text" name="Images" value="@Model.Exhibit.Images" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
    </form>
</div>

<div class="col-sm-6">
    <h2>Удаление экспоната</h2>
    <form method="get" class="form-horizontal" role="form" action="/Admin/DeleteExhibit">
        <div class="form-group">
            <label for="id" class="col-xs-4 control-label">Экспонат:</label>
            <select class="selectpicker form-control" name="id">
                <option value="">Выберите экспонат</option>
                @foreach (var x in @Model.Exhibits)
            {
                    <option value="@x.Id">@x.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-danger" value="Удалить" />
            </div>
        </div>
    </form>
</div>

<div class="col-sm-6">
    <h2>Загрузка изображений</h2>
    <form action="/Admin/UploadImagesExhibit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <select class="selectpicker form-control" name="id">
                <option value="">Выберите экспонат</option>
                @foreach (var x in @Model.Exhibits)
            {
                    <option value="@x.Id">@x.Name</option>
                }
            </select>
        </div>
        <input type="file" name="uploads" multiple />
        <button id="submit-all">Добавить изображения</button>
    </form>
</div>